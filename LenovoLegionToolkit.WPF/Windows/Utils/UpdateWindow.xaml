<local:BaseWindow
    x:Class="LenovoLegionToolkit.WPF.Windows.Utils.UpdateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LenovoLegionToolkit.WPF.Windows"
    xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Resource.UpdateWindow_Title}"
    MinWidth="800"
    MinHeight="600"
    MaxWidth="800"
    MaxHeight="600"
    Closing="UpdateWindow_Closing"
    ExtendsContentIntoTitleBar="True"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    Loaded="UpdateWindow_Loaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner">

    <local:BaseWindow.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Paragraph}">
                <Setter Property="Margin" Value="0,0,0,12" />
                <Setter Property="LineHeight" Value="24" />
                <Setter Property="FontFamily" Value="Segoe UI, Microsoft YaHei" />
            </Style>

            <Style TargetType="{x:Type List}">
                <Setter Property="Margin" Value="24,4,0,12" />
            </Style>

            <Style TargetType="{x:Type ListItem}">
                <Setter Property="Margin" Value="0,4,0,4" />
            </Style>

            <Style TargetType="{x:Type Bold}">
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            </Style>

            <Style TargetType="{x:Type Run}">
                <Setter Property="FontFamily" Value="Segoe UI, Microsoft YaHei" />
            </Style>

            <Style TargetType="{x:Type markdig:MarkdownViewer}">
                <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
                <Setter Property="FontSize" Value="14" />
            </Style>
        </ResourceDictionary>
    </local:BaseWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <wpfui:TitleBar
            Grid.Row="0"
            CanMaximize="false"
            ShowMaximize="false"
            ShowMinimize="false"
            UseSnapLayout="false" />

        <Grid
            Grid.Row="0"
            Height="24"
            Margin="12,8,12,8">
            <TextBlock
                VerticalAlignment="Center"
                Focusable="True"
                FontSize="12"
                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                IsHitTestVisible="False"
                Text="{x:Static resources:Resource.UpdateWindow_Title}" />
        </Grid>

        <Grid Grid.Row="1" Margin="32,16,32,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,24"
                    Focusable="True"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Text="{x:Static resources:Resource.UpdateWindow_WhatsNew}" />

                <markdig:MarkdownViewer
                    x:Name="_markdownViewer"
                    Grid.Row="1"
                    Margin="0,0,8,0"
                    VerticalAlignment="Top"
                    Focusable="True" />

                <ProgressBar
                    x:Name="_downloadProgressBar"
                    Grid.Row="2"
                    Height="4"
                    Margin="0,24,0,24"
                    IsIndeterminate="True"
                    Maximum="1"
                    Minimum="0"
                    Visibility="Hidden" />

                <StackPanel Grid.Row="3" Margin="0,0,0,16">
                    <wpfui:Button
                        x:Name="_downloadButton"
                        Width="180"
                        Height="36"
                        HorizontalAlignment="Center"
                        Appearance="Primary"
                        Click="DownloadButton_Click"
                        Content="{x:Static resources:Resource.Update}"
                        FontSize="14"
                        FontWeight="SemiBold"
                        IsEnabled="False" />

                    <wpfui:Button
                        x:Name="_cancelDownloadButton"
                        Width="180"
                        Height="36"
                        HorizontalAlignment="Center"
                        Click="CancelDownloadButton_Click"
                        Content="{x:Static resources:Resource.Cancel}"
                        IsEnabled="False"
                        Visibility="Collapsed" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</local:BaseWindow>