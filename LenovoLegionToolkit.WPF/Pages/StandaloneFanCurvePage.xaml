<wpfui:UiPage
    x:Class="LenovoLegionToolkit.WPF.Pages.StandaloneFanCurvePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Resource.CustomFanCurve_Title}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ComboBox
                x:Name="_fanSelector"
                Grid.Row="0"
                MinWidth="400"
                Margin="0,0,0,20"
                HorizontalAlignment="Left"
                SelectionChanged="FanSelector_SelectionChanged" />

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="_fanControlStackPanel" />
            </ScrollViewer>
        </Grid>
    </Grid>
</wpfui:UiPage>